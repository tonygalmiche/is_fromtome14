<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="is_report_delivery_document" inherit_id="stock.report_delivery_document">
        <div class="page" position="replace">


            <div class="page">
                <h2>
                    <span t-field="o.name"/>
                </h2>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th class="text-center" t-if="o.sale_id.client_order_ref">
                                <strong>N° client</strong>
                            </th>
                            <th class="text-center" t-if="o.origin">
                                <strong>N° Commande</strong>
                            </th>
                            <th class="text-center" name="td_sched_date_h">
                                <strong>Date Livraison</strong>
                            </th>
                            <th class="text-center" name="td_quantity_done_h">
                                <strong>Nbre Colis</strong>
                            </th>
                            <th class="text-center" name="td_product_weight_h">
                                <strong>Poids</strong>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center" t-if="o.sale_id.client_order_ref">
                                <span t-field="o.sale_id.client_order_ref"/>
                            </td>
                            <td class="text-center" t-if="o.origin">
                                <span t-field="o.origin"/>
                            </td>
                            <td class="text-center" name="td_sched_date">
                                <span t-field="o.scheduled_date" t-options="{'widget': 'date','format': 'dd/MM/yyyy'}"/>
                            </td>
                            <td class="text-center" name="td_quantity_done">
                                <span t-field="o.is_nb_colis"/>
                            </td>
                            <td class="text-center" name="td_product_weight">
                                <span t-field="o.is_poids_net"/> KG
                            </td>
                        </tr>
                    </tbody>
                </table>


               <table class="table table-sm mt48">
                    <thead>
                        <tr>
                            <th class="text-left"><strong>Désignation</strong></th>
                            <th class="text-right"><strong>Commandé</strong></th>
                            <th class="text-right"><strong>Livré</strong></th>
                            <th class="text-left"><strong>Unité</strong></th>
                            <th class="text-right"><strong>Colis Livré</strong></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="o.move_ids_without_package" t-as="line">
                            <td class="text-left">
                                <div><strong><span t-field="line.product_id"/></strong></div>
                                <span t-if="line.is_lots" t-field="line.is_lots"/>
                            </td>
                            <td class="text-right"><span t-field="line.sale_line_id.product_uom_qty"/></td>
                            <td class="text-right"><span t-field="line.quantity_done"/></td>
                            <td class="text-left"><span t-field="line.product_uom"/></td>
                            <td class="text-right"><span t-field="line.is_nb_colis"/></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </template>
</odoo>