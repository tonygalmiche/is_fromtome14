                        <field name="is_date_bascule_tarif"/>
                        <field name="is_coef_cdf_quai"/>
                        <field name="is_coef_cdf_franco"/>
                        <field name="is_coef_lf"/>
                        <field name="is_coef_lf_coll"/>
                        <field name="is_coef_ft"/>
                    </group>
                    <button
                        name="actualiser_tarif_action"
                        type="object"
                        string="Actualiser tous les tarifs en fonction du prix du fournisseur, des coefficients et de la date de bascule"
                        confirm="ATTENTION : Cela va actualiser tous les tarifs"
                    />
